<%- include('../partials/header') %>

 <h1 class="text-center">Collection</h1>
   <table class="table">
      <thead class="table-light">
         <tr>
            <th>Artist</th>
            <th>Title</th>
            <th>Dimensions</th>
            <th>Location</th>
            <th>Medium</th>
            <th>Year</th>
        </tr>
    </thead>

    <tbody>
        <%  arts.forEach(function(a) { %>
            <tr>
                <td><%= a.artist %></td>
                <td><%= a.title %></td>
                <td><%= a.dimensions %></td>
                <td><%= a.location %></td>
                <td><%= a.medium  %></td>
                <td><%= a.year  %></td>
                <td><a href="/arts/<%= a._id %>">Details</a></td>
                <td><form action="arts/<%= a._id %>?_method=DELETE" class='delete-form' method="POST">
                    <button type='submit'>X</button>
                </form></td>
            </tr>
        <% }) %> 
    </tbody>
</table>

<%- include('../partials/footer') %>



   



