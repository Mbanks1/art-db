<%- include('../partials/header') %>

<h3><%= title %></h3>

<div class="card" style="width: 36rem;">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="profileinfo-tab" data-toggle="tab" href="#profileinfo" 
        role="tab" aria-controls="profileinfo" aria-selected="true">My Info</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" id="collection-tab" data-toggle="tab" href="/users/<%= user._id %>"
        role="tab" aria-controls="myCollection" aria-selected="false">Collection</a>
      </li>
    </ul>


    <form action="/users/profile?_method=PUT" method="POST">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="profileinfo" role="tabpanel" aria-labelledby="profileinfo-tab">
        <div class="card-body">
          <h5 class="card-title">Name: <%= user.name %></h5>
          <p class="card-text">Email: <%= user.email %></p>
          <label for="userAlias">Alias: <%= user.alias %> </label>
          <input type="text" name="alias" class="card-text" value="<%= user.alias %>">
          <label for="bio">Bio: <%= user.bio %> </label>
          <textarea rows="3" id="bio" class="form-control" name="bio"><%= user.bio %></textarea>
          <button type="submit" class="btn btn-warning">Update</button>
        </div>
      </div>
    </div>
      </form>


        <div class="tab-pane fade" id="friends" role="tabpanel" aria-labelledby="friends-tab">
        <div class="card-body">
            
        <% user.friends.forEach(f => { %>
          <a href="/users/<%= f._id %>"><img width="30" id="avatarPhoto" src="<%= f.avatar %>" alt=""><%= f.name %></a><br><br>
        <% }) %>
    </div>
  </div>
</div>


<%- include('../partials/footer') %>
